<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#02b33e"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adrian.appfit.UstawieniaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ustawienia"
        android:layout_marginBottom="20dp"
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/textView27"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Ustaw powiadomienia"
        android:id="@+id/button18"
        android:onClick="aktCzas"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/button19"
        android:textAllCaps="false"
        android:background="#2ddc69"
        android:textSize="26dp"
        android:layout_below="@+id/textView27"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:text="o autorach"
        android:onClick="oAut"
        android:textStyle="bold"
        android:background="#2ddc69"
        android:textSize="26dp"
        android:id="@+id/button19"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
