<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#02b33e"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adrian.appfit.TreningActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/listView4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wybierz ćwiczenie:"
        android:textStyle="bold"
        android:id="@+id/textView25"
        android:textSize="19dp"
        android:layout_above="@+id/listView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Poniżej przygotowaliśmy dla ciebie zestaw ćwiczeń, które możesz wykonywać w domu bez sprzętu. Wykonuj poniższe ćwiczenia w poniedziałek, środę i piątek. Przed każdym treningiem wykonaj 10 minutową rozgrzewkę połączoną z rozciąganiem."
        android:id="@+id/textView26"
        android:layout_above="@+id/textView25"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_above="@id/textView26"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
