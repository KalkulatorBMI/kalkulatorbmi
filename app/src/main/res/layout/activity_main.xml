<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#02b33e"
    tools:context="com.example.adrian.appfit.MainActivity">



    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/statystykiButton"
        android:background="@drawable/statystyki"
        android:onClick="goToStat"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/dziennikButton" />

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@drawable/jedzenie"
        android:id="@+id/jedzenieButton"
        android:onClick="goToFood"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/ustawieniaButton"
        android:background="@drawable/ustawienia"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/aktywnoscButton"
        android:background="@drawable/aktywnosc"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@drawable/cel"
        android:id="@+id/celButton"
        android:onClick="goToCalc"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@drawable/dziennik"
        android:id="@+id/dziennikButton"
        android:onClick="goToDziennik"
        android:layout_alignTop="@+id/celButton"
        android:layout_alignStart="@+id/aktywnoscButton" />
</RelativeLayout>
