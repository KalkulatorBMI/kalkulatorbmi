<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#02b33e"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adrian.appfit.PlanDzialania">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PLAN DZIAŁANIA"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Krok 1 - podaj swoją płeć"
        android:textAllCaps="false"
        android:id="@+id/button8"
        android:background="@android:color/transparent"
        android:textSize="17dp"
        android:onClick="podajPlec"
        android:layout_above="@+id/button9"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="W kilku prostych krokach pomożemy wyliczyć Twoje aktualne zapotrzebowanie kaloryczne."
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Krok 2 - podaj swój wiek"
        android:id="@+id/button9"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:background="@android:color/transparent"
        android:onClick="podajWiek"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Krok 3 - podaj swój typ budowy"
        android:onClick="podajTyp"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Krok 4 - określ aktywność"
        android:onClick="podajAktywnosc"
        android:id="@+id/button11"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:layout_below="@+id/button10"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idź dalej"
        android:id="@+id/button12"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:onClick="goToPodsumowanie"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Krok 5 - Podaj swój cel"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:onClick="podajCel"
        android:textSize="17dp"
        android:id="@+id/button13"
        android:layout_below="@+id/button11"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:background="@drawable/arrow_back"
        android:layout_height="wrap_content"
        android:id="@+id/button15"
        android:onClick="backMenu"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/textView6" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView2"
        android:background="@drawable/check"
        android:layout_alignTop="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView3"
        android:background="@drawable/check"
        android:layout_below="@+id/button8"
        android:layout_toEndOf="@+id/button9" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView4"
        android:background="@drawable/check"
        android:layout_alignTop="@+id/button10"
        android:layout_toEndOf="@+id/button10" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/check"
        android:id="@+id/imageView5"
        android:layout_below="@+id/button10"
        android:layout_toEndOf="@+id/button11" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView6"
        android:background="@drawable/check"
        android:layout_below="@+id/button11"
        android:layout_toEndOf="@+id/button13" />

</RelativeLayout>
