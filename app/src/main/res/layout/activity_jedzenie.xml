<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#02b33e"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adrian.appfit.JedzenieActivity">

    <Button
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:text="- Znajdź produkt &#10;- Dodaj/usuń produkt &#10; - Dodaj posiłek"
        android:textStyle="bold"
        android:textSize="26dp"
        android:background="#2ddc69"
        android:textAllCaps="false"
        android:id="@+id/button2"
        android:onClick="goToFoodSearch"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:text="- Sprawdź swoje posiłki &#10; - Usuń posiłki &#10; - Sprawdź swoje zapotrzebowanie"
        android:textAllCaps="false"
        android:onClick="goToDodajPosilek"
        android:id="@+id/button"
        android:textStyle="bold"
        android:background="#2ddc69"
        android:textSize="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
